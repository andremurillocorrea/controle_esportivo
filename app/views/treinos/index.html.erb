<p id="notice"><%= notice %></p>

<%= search_form_for @q do |f| %>
  
  <%= f.label :Data_minima %>
  <%= f.date_select :Data_gteq, {order:  [:day, :month, :year],include_blank: true}   %>

  <%= f.label :Data_maxima %>
  <%= f.date_select :Data_lteq, {order:  [:day, :month, :year],include_blank: true}   %>
  
  <%= f.label :Descrição %>
  <%= f.search_field :Descricao_cont  %>
    
  <%= f.submit "Busca" %>
  
<% end %>

<h1>Treinos</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Descricao</th>
	  <th>Presença</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @treinos.each do |treino| %>
      <tr>
        <td><%= treino.Data %></td>
        <td><%= treino.Descricao %></td>
		<td><%= treino.users.count %></td>
        <td><%= link_to 'Show', treino %></td>
        <td><%= link_to 'Edit', edit_treino_path(treino) %></td>
        <td><%= link_to 'Destroy', treino, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

