<p id="notice"><%= notice %></p>

<%= search_form_for @q do |f| %>
  
  <%= f.label :Data_mínima %>
  <%= f.date_select :Data_gteq, {order:  [:day, :month, :year],include_blank: true}   %>

  <%= f.label :Data_máxima %>
  <%= f.date_select :Data_lteq, {order:  [:day, :month, :year],include_blank: true}   %>
  
  <%= f.label :Descrição %>
  <%= f.search_field :Descricao_cont  %>
    
  <%= f.submit "Busca" %>
  
<% end %>

<h1>Treinos</h1>

<table>
  <thead>
    <tr>
	  <th><%=sort_link(@q,:data, "Data") %></th>
	  <th><%=sort_link(@q,:descricao, "Descrição")%></th>
      <th><%=sort_link(@q,:users_count, "N° de presentes")%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @treinos.each do |treino| %>
      <tr>
        <td><%= treino.Data.strftime("%d/%m/%Y") %></td>
        <td><%= treino.Descricao %></td>
		<td><%= treino.users.count %></td>
        <td><%= link_to 'Ver', treino %></td>
		<% if (@user.role == 'Técnico') %>
			<td><%= link_to image_tag('edit.png',:size => '20x20'), edit_treino_path(treino) %></td>
			<td><%= link_to image_tag('rubbish-bin.png',:size => '20x20'), treino, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if (@user.role == 'Técnico') %>
	<%= link_to 'Incluir treino', new_treino_path %>
<% end %>
