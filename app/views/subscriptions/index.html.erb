<p id="notice"><%= notice %></p>

<%= search_form_for @q do |f| %>

  <%= f.label :Usuário %>
  <%= f.search_field :user_name_cont %>
  
  <%= f.label :Nome_do_evento %>
  <%= f.search_field :event_name_cont %>
    
  <%= f.label :Data_inicial %>
  <%= f.date_select :event_date_gteq, {order:  [:day, :month, :year],include_blank: true}   %>


  <%= f.label :Data_final %>
  <%= f.date_select :event_date_lteq, {order:  [:day, :month, :year],include_blank: true}   %>
  
  <%= f.submit "Busca" %>
  </div>
<% end %>

<h1>Inscrições</h1>

<table>
  <thead>
    <tr>
	  <th><%=sort_link(@q,:user_name, "Usuário") %></th>
	  <th><%=sort_link(@q,:event_name, "Nome do evento")%></th>
      <th><%=sort_link(@q,:event_date, "Data do Evento")%></th>
      <th><%=sort_link(@q,:status, "Status")%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   
    <% @subscriptions.each do |subscription| %>
      <tr>
        <td><%= subscription.user.name %></td>
        <td><%= subscription.event.name %></td>
		<td><%= subscription.event.date.strftime("%d/%m/%Y") %></td>
        <td><%= subscription.status %></td>
		<td><%= link_to 'Ver', subscription %></td>
		<% if (@user.role == 'Técnico' || @user.role == 'Diretor' || @user.name == subscription.user.name) %>
			<td><%= link_to image_tag('edit.png',:size => '20x20'), edit_subscription_path(subscription) %></td>
			<td><%= link_to image_tag('rubbish-bin.png',:size => '20x20'), subscription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Inscrição', new_subscription_path %>
