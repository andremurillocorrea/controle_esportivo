<p id="notice"><%= notice %></p>

<h1>Equipe de Natação</h1>

<table>
  <thead>
    <tr>
      <th>Foto</th>
      <th>Nome</th>
      <!--th>Email</th>
      <th>Documento</th>
      <th>Senha</th-->
      <th>Idade</th>
      <th>Altura</th>
      <th>Peso</th>
      <th>Modalidade</th>
      <!--th>Descrição</th-->
      <th>Função</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if user.role == 'Atleta'%>
        <tr>
          <td>
          <% if user.has_photo? %>
            <%= link_to image_tag('profile.png',:size => '60x60'),user %>
          <% else %>
            <%= image_tag 'profile.png',:size => '60x60' %>
          <% end %>
          </td>
          <td><%= user.name %></td>
          <!--td><%= user.email %></td>
          <td><%= user.document %></td>
          <td><%= user.pwd %></td-->
          <td><%= user.age %></td>
          <td><%= user.height %></td>
          <td><%= user.weight %></td>
          <td><%= user.category %></td>
          <!--td><%= user.description %></td-->
          <td><%= user.role %></td>

          <% if @user.role == 'Técnico' %>
            <td><%= link_to image_tag('edit.png',:size => '20x20'),edit_user_path(user)%></td>
            <td><%= link_to image_tag('rubbish-bin.png',:size => '20x20'), user, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
          <% end %>
      <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

