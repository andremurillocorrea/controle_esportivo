<p id="notice"><%= notice %></p>

<%= search_form_for @q do |f| %>
  <%= f.label :Nome_do_evento %>
  <%= f.search_field :name_cont %>
    
  <%= f.label :Data_inicial %>
  <%= f.date_select :date_gteq, {order:  [:day, :month, :year],include_blank: true}   %>


  <%= f.label :Data_final %>
  <%= f.date_select :date_lteq, {order:  [:day, :month, :year],include_blank: true}   %>
  
  <div>
  <%= f.label :Local_do_evento %>
  <%= f.search_field :local_cont %>
  
  <%= f.label :Descrição %>
  <%= f.search_field :description_cont %>
  
  <%= f.submit "Busca" %>
  </div>
<% end %>

<h1>Eventos</h1>

<% if (@user.role == 'Diretor' ) %>
	<%= link_to 'Inscrições', subscriptions_path %>
<% end %>


<table>
  <thead>
    <tr>
      <th><%=sort_link(@q,:date, "Data") %></th>
	  <th><%=sort_link(@q,:name, "Nome do evento")%></th>
      <th><%=sort_link(@q,:local, "Local")%></th>
      <th><%=sort_link(@q,:description, "Descrição")%></th>
	  <th><%=sort_link(@q,:subscriptions_count,"Inscrições")%></th>
      <th><colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.date.strftime("%d/%m/%Y") %></td>
        <td><%= event.name %></td>
		<td><%= event.local %></td>
        <td><%= event.description %></td>
		<td><%= event.subscriptions.count %></td>
		<td><%= link_to 'Ver mais...', event %></td>
		<% if (@user.role == 'Diretor' ) %>
			<td><%= link_to image_tag('edit.png',:size => '20x20'), edit_event_path(event) %></td>
			<td><%= link_to image_tag('rubbish-bin.png',:size => '20x20'), event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
	  </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Inscreva-se', new_subscription_path %>


<br>

<% if (@user.role == 'Diretor' ) %>
	<%= link_to 'Criar novo Evento', new_event_path %>
<% end %>
