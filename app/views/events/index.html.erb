<p id="notice"><%= notice %></p>

<%= search_form_for @q do |f| %>
  <%= f.label :Nome_do_evento %>
  <%= f.search_field :name_cont %>
    
  <%= f.label :Data_minima %>
  <%= f.date_select :date_gteq, {order:  [:day, :month, :year],include_blank: true}   %>


  <%= f.label :Data_maxima %>
  <%= f.date_select :date_lteq, {order:  [:day, :month, :year],include_blank: true}   %>
  
  <div>
  <%= f.label :Local_do_evento %>
  <%= f.search_field :local_cont %>
  
  <%= f.label :Descrição %>
  <%= f.search_field :description_cont %>
  
  <%= f.submit "Busca" %>
  </div>
<% end %>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Local</th>
      <th>Description</th>
	  <th>Subscriptions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.date %></td>
        <td><%= event.local %></td>
        <td><%= event.description %></td>
		<td><%= event.subscriptions.count %></td>
		
		<td><%= link_to 'Subscribe', new_subscription_path %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

