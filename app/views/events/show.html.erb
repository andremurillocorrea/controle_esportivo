<p id="notice"><%= notice %></p>

<p>
  <strong>Nome do Evento:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Data:</strong>
  <%= @event.date.strftime("%d/%m/%Y") %>
</p>

<p>
  <strong>Local:</strong>
  <%= @event.local %>
</p>

<p>
  <strong>Descrição:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Inscritos:</strong>
  <% @event.subscriptions.each do |subscription| %>
	<%= subscription.user.name %>
  <% end %>
</p>

<p>
  <strong>Total de Inscritos:</strong>
  <%= @event.subscriptions.count%>
</p>



<%if (@user.role == 'Diretor' || @user.role == 'Técnico') %>
	<%= link_to 'Editar', edit_event_path(@event) %>
<% end %>	

<%= link_to 'Voltar', events_path %>
